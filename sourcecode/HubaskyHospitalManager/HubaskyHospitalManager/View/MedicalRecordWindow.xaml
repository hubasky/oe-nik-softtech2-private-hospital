<Window x:Class="HubaskyHospitalManager.View.MedicalRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local ="clr-namespace:HubaskyHospitalManager.View"
        xmlns:l ="clr-namespace:HubaskyHospitalManager.Model.Common"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Új gyógykezelés"  Height="600" Width="600"       
        WindowStartupLocation="CenterScreen"        
        Icon="pack://application:,,,/Images/hubasky_icon.png">
    <Window.Resources>
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues"
                        ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="l:State"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <local:StringToBoolConverter x:Key="StringToBoolConverter" />
    </Window.Resources>

    <Grid>
        <Label Content="{Binding SelectedPatient.Name}" HorizontalAlignment="Left" Margin="210,22,0,0" VerticalAlignment="Top" Height="25" Width="166"/>
        <!--"{Binding SelectedPatient.ModelPatient.Name}"-->
        <Label Content="{Binding SelectedPatient.Ssn}" HorizontalAlignment="Left" Margin="210,52,0,0" VerticalAlignment="Top" Height="26" Width="166"/>
        <Label Content="Páciens neve" HorizontalAlignment="Left" Margin="17,21,0,0" VerticalAlignment="Top" Width="188"/>
        <Label Content="TAJ száma" HorizontalAlignment="Left" Margin="17,52,0,0" VerticalAlignment="Top" Width="188"/>
        <TextBox Text="{Binding SelectedMedicalRecord.ShortDescription, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="210,83,0,0" VerticalAlignment="Top" Width="366" Height="26" />
        <Label Content="Kezelés rövid leírása" HorizontalAlignment="Left" Margin="17,83,0,0" VerticalAlignment="Top" Width="188"/>
        <Label Content="Létrehozva:" HorizontalAlignment="Left" Margin="19,533,0,0" Width="85" Height="28" VerticalAlignment="Top"/>
        <Label Content="{Binding SelectedMedicalRecord.CreatedTimestamp}" HorizontalAlignment="Left" Margin="104,533,0,0" Width="192" Height="28" VerticalAlignment="Top"/>
        <Label Content="Módosítva:" HorizontalAlignment="Left" Margin="301,533,0,0" Width="85" Height="28" VerticalAlignment="Top"/>
        <Label Content="{Binding SelectedMedicalRecord.LastModifiedTimestamp}" HorizontalAlignment="Left" Margin="391,533,0,0" Width="185" Height="28" VerticalAlignment="Top"/>
        <Label Content="Kezelés állapota" HorizontalAlignment="Left" Margin="17,121,0,0" VerticalAlignment="Top" Width="188"/>
        <ComboBox HorizontalAlignment="Left" Height="27" Margin="210,121,0,0" VerticalAlignment="Top" Width="166"
                  ItemsSource="{Binding Source={StaticResource dataFromEnum}}"
                  SelectedItem="{Binding SelectedMedicalRecord.State}"
                  />
        <Button Content="Mentés" Name="btnSave" HorizontalAlignment="Left" Height="20" Margin="301,490,0,0" VerticalAlignment="Top" Width="275" Click="btnSave_Click"/>
        <TextBox HorizontalAlignment="Left" Height="130" Margin="19,355,0,0" TextWrapping="Wrap" Text="{Binding SelectedMedicalRecord.Diagnosis, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="557"
        	IsEnabled="{Binding SelectedValue, ConverterParameter=ValueForEnabled, Converter={StaticResource StringToBoolConverter}, ElementName=MedicalHistory}"/>
        <Label Content="Diagnosis" HorizontalAlignment="Left" Margin="19,324,0,0" VerticalAlignment="Top" Width="139"/>
        <Button Content="Kezelés törlése (not impl)" x:Name="btnDelete" HorizontalAlignment="Left" Height="20" Margin="19,490,0,0" VerticalAlignment="Top" Width="237" Click="btnDelete_Click"/>
    </Grid>
</Window>
